pragma solidity ^0.8.13;

contract PromotionToNextGrade {
    error InsufficientMarks(uint marks);

    uint _marks = address(this).marks;

    function testRevert() public view {
        if (_marks < 40) {
            
            revert InsufficientMarks({marks: _marks});
        }
    }

    function testRequire() public pure {
        require(_marks > 40, "Failed");
    }

    string public status;

    function testAssert() public view {
            assert(_marks > 40);
    }
}
